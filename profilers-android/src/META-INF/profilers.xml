<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <facet.toolWindow id="Android Profiler"
                      facetIdList="android"
                      anchor="bottom"
                      icon="AndroidIcons.Profiler.ToolWindow"
                      conditionClass="com.android.tools.idea.profilers.AndroidProfilerToolWindowFactory"
                      factoryClass="com.android.tools.idea.profilers.AndroidProfilerToolWindowFactory"/>
    <applicationService serviceImplementation="com.android.tools.idea.profilers.ProfilerService"/>
  </extensions>
  <actions>
    <action id="Android.AndroidProfiler" class="com.android.tools.idea.profilers.AndroidProfilerAction"
            icon="AndroidIcons.Profiler.Toolbar" >
      <add-to-group group-id="AndroidToolsGroup" anchor="after" relative-to-action="Android.RunAndroidSdkManager" />
      <add-to-group group-id="NavBarToolBar" anchor="before" relative-to-action="ShowProjectStructureSettings" />
    </action>
    <group id="Android.AndroidProfilerGroup">
      <reference id="Android.AndroidProfiler" />
      <separator/>
      <add-to-group group-id="MainToolBar" anchor="before" relative-to-action="HelpTopics" />
    </group>
  </actions>
</idea-plugin>
